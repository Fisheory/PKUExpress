/* 整体容器样式 */
.container {
  height: calc(100vh - 140rpx);
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 滚动容器样式 */
.scroll-container {
  flex: 1;
  margin-top: -10px;
  /* overflow-y: auto; */
}

/* 列表项样式 */
.list-item {
  background-color: #ffffff;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.item-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333333;
}

/* 内容样式 */
.item-content {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

/* 途径点样式 */
.item-route {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 15rpx;
}

/* 查看详情按钮 */
.detail-btn {
  background-color: #FF8E4F;
  color: #ffffff;
  border: none;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}
