<!--pages/profile/profile.wxml-->
<navi-bar title="PKUExpress"></navi-bar>

<view class="container">
  <view class="header">
    <!-- Profile Picture -->
    <image class="profile-pic" src="/assets/profile_icon.png" />

    <view class="form-item">
      <view style="display: flex; align-items: center; justify-content: space-between;">
        <text>途径点:</text>
        <button bindtap="navigateToMap" style="margin-left: auto; height: 32px; line-height: 20px;">选择</button>
      </view>
      <textarea placeholder="Enter addresses" bindinput="onAddressInput" style="height: 80px; width: 100%;"></textarea>
    </view>


    <view class="form-item">
      <text>金额:</text>
      <input placeholder="Enter payment" bindinput="onPaymentInput"/>
    </view>

    <view class="form-item">
      <text style="margin-top: -60px;">详情:</text>
      <textarea placeholder="Enter details" bindinput="onDetailsInput" style="height: 80px; width: 100%;"></textarea>
    </view>

    <view class="form-item">
      <text style="margin-top: 0px;">截止时间:</text>
      <view class="fake" style="max-width: 44vw;">
        <picker mode="date" bindchange="dateChange">
        <text>{{selectedDate}}</text>
        </picker>
      </view>
      <view class="fake" style="max-width: 16vw;">
        <picker mode="time" bindchange="timeChange">
        <text>{{selectedTime}}</text>
        </picker>
      </view>
    </view>
  </view>


  <!-- Stats Section with place holders -->
  <view class="stats">
    <view class="stat-item">
      <text class="stat-value">{{gold}}</text>
      <text class="stat-label"> 金币</text>
    </view>
    <view class="stat-item" bindtap="onReviews">
      <text class="stat-value">{{tasksCompleted}}</text>
      <text class="stat-label"> 已完成任务</text>
    </view>
    <view class="stat-item" bindtap="onPosts">
      <text class="stat-value">{{tasksPosted}}</text>
      <text class="stat-label"> 已发布任务</text>
    </view>
  </view>

  <view class="greeting">
  <view class="message-box">
    <text>您好, {{username}}!</text>
  <view>
    <text>欢迎来到PKUExpress, 感谢您的支持！ヾ(◍°∇°◍)ﾉ</text>
  </view>
  </view>

</view>

  <!-- Menu Section -->
  <view class="menu">
    <view class="menu-item" style="margin-bottom: 20px;" bindtap="onAccepted">
      <text class="menu-icon">📖</text>
      <text class="menu-label">当前任务</text>
    </view>
    <view class="menu-item" bindtap="onMessages">
      <text class="menu-icon">💬</text>
      <text class="menu-label">信息</text>
    </view>
    <view class="menu-item" bindtap="onSettings">
      <text class="menu-icon">⚙️</text>
      <text class="menu-label">设置</text>
    </view>
    <view class="menu-item" bindtap="showAboutUs">
      <text class="menu-icon">ℹ️</text>
      <text class="menu-label">关于我们</text>
    </view>
    <view class="menu-item" bindtap="onLogout">
      <text class="menu-icon">🔙</text>
      <text class="menu-label" style="color: red;">登出</text>
    </view>
  </view>
</view>

<bott-bar></bott-bar>