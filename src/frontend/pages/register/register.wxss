  padding-top: 150px;
  justify-content: flex-start; /* 将条目从顶部开始排列，避免多余的空白 */
}

/* 标题样式 */
.font_text_600 {
  font-weight: 600;
  font-size: 20px;
  text-align: center;
  margin-bottom: 10px; /* 缩小标题下方的空隙，使布局紧凑 */
}

