.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background-color: #ffffff;
  }
  
  .header {
    display: flex;
    align-items: center;
    width: 100%;
    margin-bottom: 30px; /* Add spacing below the header */
  }
  
  .profile-pic {
    width: 60px;
    height: 60px;
    border-radius: 25px;
    margin-right: 10px;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
  }
  
  .user-id {
    font-size: 18px;
    font-weight: bold;
    color: #000000;
  }
  
  .user-email {
    font-size: 14px;
    color: #888888;
  }
  
  .greeting {
    margin-bottom: 20px; 
    text-align: left; 
  }

  .message-box {
    border: 1px solid #ddd; 
    border-radius: 8px; 
    padding: 10px; 
    background-color: #f9f9f9; 
    text-align: left; 
    margin: 10px auto; 
    width: 90%; 
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); 
  }
  
  .message-box text {
    display: block; 
    margin-bottom: 5px; 
    font-size: 14px; 
    color: #333; 
  }

  .stats {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 30px; 
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-value {
    font-size: 18px;
    font-weight: bold;
  }
  
  .stat-label {
    font-size: 14px;
    color: #888;
  }
  
  .menu {
    width: 100%;
    margin-bottom: 20px; /* Add spacing between menu items */
  }
  
  .menu-item {
    display: flex;
    align-items: center;
    padding: 15px 0; /* Increase vertical padding for menu items */
    border-bottom: 1px solid #eee;
  }
  
  .menu-icon {
    margin-right: 10px;
    font-size: 18px;
  }
  
  .menu-label {
    font-size: 16px;
  }
  
  .bottom-nav {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding: 10px 0;
    background-color: #fff;
    border-top: 1px solid #eee;
  }
  
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .nav-icon {
    width: 24px;
    height: 24px;
  }
  