.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.message-list {
  margin-top: -20px;
  flex: 1;
}

.message-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc;
  align-items: center;
}

.left {
  margin-right: 10px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.top {
  font-weight: bold;
}

.bottom {
  color: #777;
  display: flex;
  align-items: center;
}

.timestamp {
  color: #777;
  position: absolute;
  justify-content: center;
  display: flex;
  top: 0;
  right: 0;
  width: 120px;
  height: 20px;
  align-items: center;
  font-size: 12px;
  margin-top: -10px;
}

.unread-count {
  position: absolute;
  top: 0;
  right: 0;
  width: 20px;
  height: 20px;
  background-color: red;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  margin-top: 15px;
  margin-right: 10px;
}
