.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 20px;
}

.font_text_600 {
  font-weight: 600;
  font-size: 20px;
  text-align: center;
  margin-bottom: 20px;
}

.font_text_400 {
  font-weight: 400;
  font-size: 18px;
  text-align: center;
  margin-bottom: 20px;
}

.input_container {
  display: flex;
  align-items: center;
  width: 80%;
  border-bottom: 1px solid #777;
}

.input_label {
  color: #777;
  margin-right: 0px;
}

.input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: none;
  outline: none;
  background-color: transparent;
}

.placeholder {
  color: #ccc;
  text-align: center;
}

.r40px_button {
  width: 80%;
  height: 40px;
  margin: 10px 0;
  background-color: #f87e0b;
  color: #fff;
  border: none;
  border-radius: 20px;
  text-align: center;
  line-height: 25px;
}

.r40px_switch_button {
  width: 100%;
  max-width: 2000px;
  height: 40px;
  margin: 10px 0;
  background-color: #eee;
  color: #777;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  white-space: nowrap;
}

.message {
  height: 20px;
  margin: 10px 0;
  font-size: 14px;
  color: message_color;
}
